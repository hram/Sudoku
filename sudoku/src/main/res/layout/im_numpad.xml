<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/switch_input_mode"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/num_pad"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/switch_num_note"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/pencil_disabled"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/button_restart"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/restart"
            tools:ignore="ContentDescription"/>

        <Button
            android:id="@+id/button_1"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="1"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button_2"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="2" 
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/button_3"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="3" 
            tools:ignore="HardcodedText"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/capture_new"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/camera" 
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/button_clear_noes"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/clear_notes"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/button_undo"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/undo"
            tools:ignore="ContentDescription"/>

        <Button
            android:id="@+id/button_4"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="4" 
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/button_5"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="5" 
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/button_6"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="6" 
            tools:ignore="HardcodedText"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/button_prop"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/settings"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/button_view_mode"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/view_mode"
            tools:ignore="ContentDescription"/>

        <Button
            android:id="@+id/button_clear"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="C"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button_7"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="7" 
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/button_8"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="8" 
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/button_9"
            style="@style/im_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="9" 
            tools:ignore="HardcodedText"/>
        
    </LinearLayout>

</LinearLayout>